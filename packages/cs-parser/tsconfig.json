{
	"extends": "../../tsconfig.json",
	"include": ["src"],
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "esnext",
		"target": "es2018",
		"lib": ["esnext"],
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true
	},
	"references": [
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
